<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Select user</h1>
    <h2>Please select your profile from the below options</h2>

    <%= form_with url: choose_user_login_path, method: :post do |form| %>
      <% @users.each do |user| %>
        <div class="row">
          <div class="col-md-12 select_user" id="<%= user.id %>">
            <div class="col-md-2" style="padding: 0; padding-top: 15px; padding-bottom: 15px">
              <%= image_tag user.user_image, class: 'user_image' %>
            </div>
            <div class="col-md-10">
              <h2 style="padding-left: 15px; font-size: 1.9em; margin-bottom: 0; margin-top: 0; padding-top: 15px; text-align: left"><%= user.email %></h2>
              <h2 style="padding-left: 15px; font-size: 1.5em; text-align: left">Probability: <%= user.probability %></h2>
            </div>
          </div>
        </div>
      <% end %>
      
      <%= form.hidden_field :user_id, id: :user_id%>

      <%= form.submit "Choose User", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

