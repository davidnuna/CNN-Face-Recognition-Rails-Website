<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Facial recognition image</h1>
    <h2 id="image_method_1">Please take a photo as clear as possible with you</h2>
    <h2 id="image_method_2">The photo taken should contain only contain your whole face</h2>

    <button type="button" class="btn btn-secondary" id="image_method">Upload a picture instead</button>
    <div id="camera_content" class="contentarea">
      <div class="camera">
        <video id="video">Video stream not available.</video>
        <button id="startbutton">Take photo</button>
      </div>
      <canvas id="canvas">
      </canvas>
      <div class="output">
        <img id="photo" alt="The screen capture will appear in this box.">
      </div>
    </div>

    <%= form_with model: @login_attempt, url: logins_path, local: true, method: :post do |form| %>
      <span class="image">
        <%= form.file_field :login_image_uploaded, accept: "image/png,image/jpeg", id: "uploaded_image", style: "display: none" %>
      </span>
      <%= form.hidden_field :login_image_method, value: "camera", id: "login_image_method" %>
      <%= form.hidden_field :login_image_camera, id: "login_image_camera" %>

      <%= form.submit "Confirm", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>