<div class="center jumbotron">
  <h1>Exam Quiz Application</h1>
  <% if @current_user.present? %>
    <h3>Welcome!</h3>
    <%= image_tag @current_user.user_image %>
    <h4><%= @current_user.full_name %></h4>
    <br>
    <%= link_to "Go To Quizzes", quizzes_path, class: "btn btn-lg btn-primary" %>
  <% else %>
    <br>
    <h3>I am a</h3>
    <%= link_to "Student", new_login_path, method: :get, class: "btn btn-lg btn-primary" %>
    <%= link_to "Teacher", user_session_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>