<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <div class="col-md-3 user_image">
        <%= image_tag current_user.user_image %>
      </div>
      <div class="col-md-9">
        <h4> <%= @user.email %> </h4>
      </div>
      <% if @user.admin? %>
        <p class="admin"> admin </p>
      <% end %>
    </section>
  </aside>
</div>